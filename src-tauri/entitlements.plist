<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow app to run (required for distribution) -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Audio input for speech-to-text -->
    <key>com.apple.security.device.audio-input</key>
    <true/>

    <!-- Allow accessibility features for reading selected text -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Network access for model downloads -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- File access for model storage -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow loading dynamic libraries (ONNX Runtime, whisper.cpp) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Disable library validation for third-party frameworks -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>
