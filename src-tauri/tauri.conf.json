{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Blah³",
  "identifier": "com.blahcubed.app",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "Blah³"
    },
    "windows": [
      {
        "label": "main",
        "title": "Blah³",
        "width": 480,
        "height": 640,
        "resizable": true,
        "decorations": true,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "14.0",
      "entitlements": null
    }
  },
  "plugins": {
    "global-shortcut": {}
  }
}
