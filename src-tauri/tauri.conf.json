{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Blah続",
  "identifier": "com.blahcubed.app",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true,
      "tooltip": "Blah続"
    },
    "windows": [
      {
        "label": "main",
        "title": "Blah続",
        "width": 480,
        "height": 640,
        "resizable": true,
        "decorations": true,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "public.app-category.productivity",
    "shortDescription": "Local Voice Toolkit - Speech-to-Text & Text-to-Speech",
    "longDescription": "Blah続 is a privacy-focused voice toolkit for macOS. Dictate text with Whisper AI and read content aloud with Kokoro TTS - all running 100% offline on your Mac.",
    "macOS": {
      "minimumSystemVersion": "14.0",
      "entitlements": "entitlements.plist",
      "exceptionDomain": null,
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    }
  },
  "plugins": {
    "global-shortcut": {}
  }
}
